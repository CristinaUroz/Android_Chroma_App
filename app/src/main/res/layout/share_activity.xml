<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#332222"
    tools:context="uroz.cristina.chroma_app.ChooseActivity">

    <Button
        android:id="@+id/previous_button_share"
        android:layout_width="@dimen/tam_normal"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/previous" />

    <ImageView
        android:id="@+id/ima_final"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/share_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/previous_button_share"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/share_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:text="@string/share" />

    <Button
        android:id="@+id/save_button"

        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/share_button"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="@string/save" />

    <Button
        android:id="@+id/restart_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/share_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/share_button"
        android:layout_marginBottom="10dp"
        android:text="@string/restart" />

    <Button
        android:id="@+id/finish_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restart_button"
        android:layout_alignEnd="@+id/save_button"
        android:layout_alignRight="@+id/save_button"
        android:text="@string/finish" />

</RelativeLayout>
